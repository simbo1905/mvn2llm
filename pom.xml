<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.simbo1905</groupId>
    <artifactId>mvn2llm</artifactId>
    <version>0.10-SNAPSHOT</version>
    <description>
        mvn2llm downloads and extracts JavaDoc documentation from Maven source JARs for LLM processing.
        This enables AI assistants to provide accurate, version-specific API guidance and code suggestions
        based on the official documentation of any Maven-published Java library.
    </description>
    <properties>
        <maven.compiler.release>23</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.11.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>3.26.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>mvn2llm</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>io.github.simbo1905.mvn2llm.JavaDocExtractor</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.5</version>
                <configuration>
                    <name>mvn2llm</name>
                    <vendor>mvn2llm</vendor>
                    <destination>target/dist</destination>
                    <input>target</input>
                    <mainJar>mvn2llm.jar</mainJar>
                    <mainClass>io.github.simbo1905.mvn2llm.JavaDocExtractor</mainClass>
                    <javaOptions>
                        <javaOption>--enable-preview</javaOption>
                        <javaOption>--enable-native-access=ALL-UNNAMED</javaOption>
                    </javaOptions>
                    <type>APP_IMAGE</type>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
